= form_for @group do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this mybook_group from being saved:"
      %ul
        - @group.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :avatar
    = f.file_field :avatar, class: 'form-control'
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :group_type
    = f.select :group_type, Group.group_types.keys, {},class: 'form-control'
  .form-group
    = f.label :member_number_limitation
    = f.number_field :member_number_limitation, class: 'form-control'
  .form-group
    = f.label :book_number_required
    = f.number_field :book_number_required, class: 'form-control'
  .form-group
    = f.label :join_fee
    = f.number_field :join_fee, class: 'form-control'
  .form-group
    = f.label :description
    = f.rich_text_area :description, class: 'form-control'
  .actions
    = f.submit 'Save'
